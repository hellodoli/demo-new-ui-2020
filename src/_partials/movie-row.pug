mixin movieRow (movies)
  .stt-movie-row(id= movies.id)
    .stt-movie-row-title
      div.title= movies.title
      div.page= movies.page
    .stt-movie-row-list
      each movie in movies.items
        - var  v = movie.view;
        - var dataView = '{ "bigBg": "' + v.bigBg + '", "year": "' + v.year + '", "duration": "' + v.duration.toString() + '", "type": "' + v.type + '", "ban": "' + v.ban + '" }';
        .stt-movie-row-item(data-view= dataView)
          .stt-img-holder-ratio
            img(src= movie.src)